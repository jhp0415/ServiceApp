<?xml version="1.0" encoding="utf-8"?>

<!--스크롤뷰 추가하기-->

<RelativeLayout
    android:id="@+id/poi_child_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_arrow_2"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginLeft="55dp"
        android:layout_height="50dp"
        android:background="@drawable/outline"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="3dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/poi_child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="2dp"
                android:textColor="@color/basicText"
                android:text="POI Child Name"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/poi_child_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="POI Address"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_arrow_go_gray" />
    </RelativeLayout>
</RelativeLayout>